import java.util.Scanner;
class pattern
{
    public static void main(String arg[])
    {
        Scanner input=new Scanner(System.in);
        int x=input.nextInt();
        for(int i=x;i>=1;i--)
        {
            for(int j=x;j>i;j--)
            {
                System.out.print(" ");
            }
            for(int j=1;j<=i;j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
